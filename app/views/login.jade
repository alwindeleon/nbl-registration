extends layout

block content
  .row
    .col-md-4.col-md-offset-4
      form.form-horizontal#login-form(method="post",action="/login")
        fieldset
          legend NBL Login
          span.label.label-warning=error
          .form-group
            label.col-lg-2.control-label(for='inputEmail') Username
            .col-lg-10
              input#inputEmail.form-control(type='text', placeholder='username',name="username")
          .form-group
            label.col-lg-2.control-label(for='inputPassword') Password
            .col-lg-10
              input#inputPassword.form-control(type='password', placeholder='password',name="password")
              button.btn.btn-primary(type='submit').top-1 Login
