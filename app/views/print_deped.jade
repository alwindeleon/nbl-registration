extends layout

block content
  .row.main
    .col-md-6.col-md-offset-3.well.well-lg.top-2#mainBox
      h2.text-center Catholic School of Pacita
      h4.text-center Private School Registry of Learners
      h5.text-center Beginning-Of-School-Year
      h6 Region : 4-A
      h6 School Division : Laguna
      h6 School ID : 402422
      h6 Name of Institution : NBL Education System
      .row
        .col-md-12
          table.table.table-striped.table-hover
            thead
              tr
                th Student Number
                th Last Name
                th First Name
                th Middle Name
                th Gender
                th Birth Date
                th Year Level
                th Section
                th Province Residence
            tbody
              for student,index in students
                tr
                  td=student.studentNumber
                  td=student.lastName
                  td=student.firstName
                  td=student.middleName
                  td=student.gender
                  td=student.dateOfBirth
                  td=student.yearLevel
                  td=student.section
                  td Laguna
              
      .row
        .col-lg-4.col-lg-offset-4
          button.btn.btn-primary.btn-lg.no-print#print(type='button') Print Details


  style.
    @page {
      size:landscape;
    }
  script.
      $(document).ready(function(){
        $('#print').click(function(){
          $(".row.main").print({
                  globalStyles: false,
                  mediaPrint: false,
                  stylesheet: "/css/deped.css",
                  noPrintSelector: ".no-print",
                  iframe: true,
                  append: null,
                  prepend: null,
                  manuallyCopyFormValues: true,
                  deferred: $.Deferred(),
                  timeout: 250,
                  title: "Department of Education",
                  doctype: '<!doctype html>'
          });
        });
      })
      
    