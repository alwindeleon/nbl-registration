extends layout

block content
  .row
    .col-md-4.col-md-offset-4.well.well-lg.top-2#mainBox
      h3.text-primary Input Section To Be Printed

        .row
          .col-md-12
            span.label.label-warning=message
            form.top-1(method="POST",action="/printsoa")
              form-group
                label.col-lg-3.control-label(for='select').lead Due Fee
                .col-lg-3
                  select#select.form-control(name='name')
                    for fee in possibleFees
                      option(value='#{fee}')=fee
                .col-lg-3
                  input(type='text', name='date',placeholder='Date Due eg. jan-6-2016')
                .row
                  .col-lg-4.col-lg-offset-4.top-1
                    button.btn.btn-default(type='submit') next
